

<h1>All Todos</h1>


<table>
  <thead>
   
  </thead>
  <% @lists.each do |list| %>
    <% if list.completed %>

   
  <tbody>
 
      <tr class="table-secondary">
        <td class="striker"><%=link_to list.description, edit_list_path(list)%> </td>
        <td> 
        <center>
        <%= form_for(list) do |f| %>
        <%= f.text_field :description, type: 'hidden' %>
        <%= f.check_box :completed, :checked => false, :style => 'visibility: hidden' %>
        <%= f.submit "Validate", class: 'btn btn-outline-success btn-sm' %>
        <% end %>
        </center></td>
        <td><%= link_to 'Delete', list, class: 'btn btn-outline-secondary  btn-sm',method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

      <% else %>
      <tr>
        <td><%=link_to list.description, edit_list_path(list)%></td>
        <td> 
        <center>
        <%= form_for(list) do |f| %>
        <%= f.text_field :description, type: 'hidden' %>
        <%= f.check_box :completed, :checked => true, :style => 'visibility: hidden' %>
        <%= f.submit "Invalide", class: 'btn btn-outline-danger btn-sm' %>
        <% end %>
        </center> 
        </td>

        <td><%= link_to 'Delete', list,class: 'btn btn-outline-secondary  btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>

    <% end %>
  </tbody>
</table>

<br>

